@model IEnumerable<cmsApp.Model.Blog>
@{
    ViewData["Title"] = "Index";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created</th>
                <th>Text</th>
                <th>Detail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model)
            {
                <tr>
                    <td>@blog.Title</td>
                    <td>@Html.DisplayFor(items => blog.CreatedAt) </td>
                    <td>@Html.DisplayFor(items => blog.Short)</td>
                    @*<td> <a asp-action="Detail" asp-route-id="@blog.Title">Detail</a> </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>
